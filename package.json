    "sharp": "^0.32.5",
    "node-cron": "^3.0.2",
    "redis": "^4.6.8",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "crypto-js": "^4.1.1"
